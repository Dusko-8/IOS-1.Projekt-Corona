                    printf "#"
                }
                printf "\n"

                if(c[12]!=""){
                    printf "None  : "
                    for(j=0; j < c[12] ;j++){
                    printf "#"
                }
                }
            }')

            echo "$Result"
        fi
        if [ "$WIDTH" = "Basic" ]; then
            WIDTH=10000

            Result=$(echo "$Result" | awk -v i=0 -v WIDTH="$WIDTH" -F ": " \
                '{
                if($2 == 0){
                    c[i]=0
                    i++
