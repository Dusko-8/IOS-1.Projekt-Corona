    #monthly comand with graph
    if [ "$COMAND" = "monthly" ] && [ "$s_isset" = "1" ]; then
        
        if [ "$WIDTH" != "Basic" ]; then
            Result=$(echo "$CFS" | cut -d "," -f 2 | awk \
                -v None=0 -v Date="" -v max=0 -v WIDTH="$WIDTH"  -F'-' \
                '{  
                Date=""$1"-"$2""
                if($1 != "" && $2 != "" && $3 != ""){
                    month[Date]++
                }else{
